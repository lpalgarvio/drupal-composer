{
  "name": "drupal-composer/drupal-project",
  "description": "Composer template for Drupal projects",
  "keywords": [ "devops", "drupal" ],
  "homepage": "https://github.com/lpalgarvio/drupal-composer",
  "support": {
    "source": "https://github.com/lpalgarvio/drupal-composer",
    "docs": "https://github.com/lpalgarvio/drupal-composer/wiki",
    "issues": "https://github.com/lpalgarvio/drupal-composer/issues",
    "email": "lp.algarvio@gmail.com"
  },
  "license": [
    "Artistic-2.0"
  ],
  "authors": [{
    "name": "Lu√≠s Pedro Algarvio",
    "email": "lp.algarvio@gmail.com",
    "homepage": "http://lp.algarvio.org",
    "role": "DevOps"
  }],
  "minimum-stability": "beta",
  "prefer-stable": true,
  "config": {
    "vendor-dir": "vendor",
    "preferred-install": "dist",
    "github-protocols": [
      "https", "git", "ssh"
    ]
  },
  "extra": {
    "installer-paths": {
      "web/core/": ["type:drupal-core"],
      "web/modules/contrib/{$name}/": ["type:drupal-module"],
      "web/themes/contrib/{$name}/": ["type:drupal-theme"],
      "web/libraries/{$name}/": ["type:drupal-library"],
      "web/profiles/{$name}/": ["type:drupal-profile"],
      "web/drush/{$name}/": ["type:drupal-drush"]
    },
    "preserve-paths": [
      "web/modules/contrib",
      "web/modules/custom",
      "web/modules/exports",
      "web/themes/contrib",
      "web/themes/custom",
      "web/libraries",
      "web/profiles",
      "web/drush",
      "web/sites/default/settings.php",
      "web/sites/default/files"
    ],
    "drupal-structure": {
      "root": "web",
      "core": "web/core"
    }
  },
  "scripts": {
    "post-install-cmd": [
      "DavidBarratt\\DrupalStructure\\ScriptHandler::postUpdate"
    ],
    "post-update-cmd": [
      "DavidBarratt\\DrupalStructure\\ScriptHandler::postUpdate"
    ]
  },
  "repositories": {
    "composer": {
      "type": "composer",
      "url": "https://packagist.drupal-composer.org"
    }
  },
  "require": {
    "composer/installers": "~1.0",
    "derhasi/composer-preserve-paths": "~0.1",
    "davidbarratt/drupal-structure": "~1.0@alpha",
    "drupal/drupal": "7.*",
    "drupal/honeypot": "7.*",
    "drupal/views": "7.*"
  },
  "require-dev": {
    "drupal/devel": "7.*"
  }
}
